# Portfolio Website Environment Variables
# Copy this file to .env.local and fill in your actual values

# Contact Form Configuration
CONTACT_EMAIL=your.email@example.com
FORM_API_KEY=your_form_service_api_key

# Gmail Configuration for Contact Form (Updated Implementation)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-gmail-app-password

# Analytics (Optional)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://yourwebsite.com
NEXT_PUBLIC_SITE_NAME="Your Name - Portfolio"

# Social Media (Optional - for dynamic links)
NEXT_PUBLIC_GITHUB_URL=https://github.com/yourusername
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/in/yourusername
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/yourusername

# Email Service Provider (Choose one)
# Formspree
FORMSPREE_FORM_ID=your_formspree_id

# SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_TO_EMAIL=contact@yourdomain.com

# EmailJS
EMAILJS_SERVICE_ID=your_emailjs_service
EMAILJS_TEMPLATE_ID=your_emailjs_template
EMAILJS_PUBLIC_KEY=your_emailjs_public_key

# Database (Optional - for future features)
DATABASE_URL=your_database_connection_string

# API Keys (Optional - for integrations)
GITHUB_API_TOKEN=your_github_personal_access_token
LINKEDIN_API_KEY=your_linkedin_api_key

# Security (Optional)
NEXTAUTH_SECRET=your_nextauth_secret
NEXTAUTH_URL=https://yourwebsite.com

# Development flags (Optional)
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_CONTACT_FORM=true
NEXT_PUBLIC_ENABLE_DARK_MODE_TOGGLE=false

# Performance monitoring (Optional)
VERCEL_ANALYTICS_ID=your_vercel_analytics_id
